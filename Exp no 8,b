#include <stdio.h>

int main() {
    char str[100];
    int i = 0, j;

    printf("Enter a string: ");
    scanf("%s", str);

    while (str[i] != '\0')
        i++; 

    j = i - 1;  // last index
    int flag = 1;

    for (i = 0; i < j; i++, j--) {
        if (str[i] != str[j]) {
            flag = 0;
            break;
        }
    }

    if (flag)
        printf("String is Palindrome");
    else
        printf("Not a Palindrome");

    return 0;
}
